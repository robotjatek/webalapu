<% include SubTemplates/header.ejs %>
<div>
    <form class="form-horizontal" role="form" name="edit_form" id ="edit_form">
        <fieldset>
            <legend>Profil szerkesztése</legend>

     	
		<div class="form-group">
		<label class="control-label col-sm-2">Teljes név:</label>
		<div class="col-sm-10">
		    <input class="form-control" name="name_input" type="text"  value= "<%= user.name %>" required/>
		</div>
	    </div>

	    <div class="form-group">
		<label class="control-label col-sm-2">Felhasználónév:</label>
		<div class="col-sm-10">
		    <input class="form-control" name="user_input" type="text" value= "<%= user.username %>" required/>
		</div>
	    </div>

	    <div class="form-group">
		<label class="control-label col-sm-2">Email:</label>
		<div class="col-sm-10">
		    <input class="form-control" name="email_input" type="text" value= "<%= user.email %>" required/>
		</div>
	    </div>

	    <div class="form-group">
		<label class="control-label col-sm-2">Ország:</label>
		<div class="col-sm-10">
		    <input class="form-control" name="country_input" type="text"  value= "<%= user.country %>" required/>
		</div>
	    </div>

	    <div class="form-group">
		<label class="control-label col-sm-2">Város:</label>
		<div class="col-sm-10">
		    <input class="form-control" name="city_input" type="text" value= "<%= user.city %>" required/>
		</div>
	    </div>

		<div class="form-group">
		<label class="control-label col-sm-2">Utca:</label>
		<div class="col-sm-10">
		    <input class="form-control" name="street_input" type="text" value= "<%= user.street %>" required/>
		</div>
	    </div>
		
		<div class="form-group">
		<label class="control-label col-sm-2">Irányítószám:</label>
		<div class="col-sm-10">
		    <input class="form-control" name="pc_input" type="text" value= "<%= user.postal_code %>" required/>
		</div>
		
	    </div>
	    <div class="form-group">
		<label class="control-label col-sm-2">Telefon:</label>
		<div class="col-sm-10">
		    <input class="form-control" name="phone_input" type="text" value= "<%= user.phone %>" required/>
		</div>
	    </div>
		
		<div class="form-group">
        <div class="col-sm-10">
        <button class="btn btn-default" type="button" data-button="change_btn" name="change_btn">Módosítások mentése</button>
        </div>
        </div>
			
           
        </fieldset>
		</form>
		<form class="form-horizontal" role="form" name="edit_pass" id ="edit_pass">


		<fieldset>
		<legend>Jelszó módosítás</legend>
        <div class="form-group">
        <label class="control-label col-sm-2">Régi jelszó:</label>
        <div class="col-sm-10">
            <input class="form-control" name="oldpass_input" id="op" type="password"  />
        </div>
        </div>
			
        <div class="form-group">
        <label class="control-label col-sm-2">Új jelszó: </label>
        <div class="col-sm-10 ">
            <input class="form-control" name="newpass_input" id="np" type="password"  />
        </div>
        </div>
		
		<div class="form-group">
        <label class="control-label col-sm-2">Új jelszó ismét: </label>
        <div class="col-sm-10">
            <input class="form-control" name="newpass_input_again" id="npa" type="password"  />
        </div>
        </div>
		</fieldset>
		
		 <div class="form-group">
                <div class="col-sm-10">
                    <button class="btn btn-default" type="button" data-button="change_pass" name="change_pass">Jelszó módosítása</button>
                </div>
            </div>
		
    </form>
</div>
   
<script src="/public/javascripts/_lib/jquery-2.1.1.min.js"></script>
<script src="/public/javascripts/editProfile.js"></script>

    <% include SubTemplates/footer.ejs %>
